{
    "name": "georgringer/ieb-project",
    "type": "project",
    "repositories": [{
        "type": "path",
        "url": "./packages/*",
        "options": {
            "symlink": true
        }
    }],
    "require": {
        "ext-pdo": "*",
        "bithost-gmbh/pdfviewhelpers": "^3.1",
        "cweagans/composer-patches": "^1.7",
        "drlenux/array-smart-diff": "^1.0",
        "georgringer/news": "^14",
        "helhum/typo3-console": "^8.3",
        "league/csv": "^9.8",
        "rogervila/array-diff-multidimensional": "^2.1",
        "symfony/var-dumper": "^5.4",
        "typo3/cms-backend": "^13.4",
        "typo3/cms-belog": "^13.4",
        "typo3/cms-core": "^13.4",
        "typo3/cms-extbase": "^13.4",
        "typo3/cms-extensionmanager": "^13.4",
        "typo3/cms-felogin": "^13.4",
        "typo3/cms-filelist": "^13.4",
        "typo3/cms-filemetadata": "^13.4",
        "typo3/cms-fluid": "^13.4",
        "typo3/cms-fluid-styled-content": "^13.4",
        "typo3/cms-form": "^13.4",
        "typo3/cms-frontend": "^13.4",
        "typo3/cms-info": "^13.4",
        "typo3/cms-install": "^13.4",
        "typo3/cms-lowlevel": "^13.4",
        "typo3/cms-recycler": "^13.4",
        "typo3/cms-redirects": "^13.4",
        "typo3/cms-reports": "^13.4",
        "typo3/cms-rte-ckeditor": "^13.4",
        "typo3/cms-scheduler": "^13.4",
        "typo3/cms-seo": "^13.4",
        "typo3/cms-setup": "^13.4",
        "typo3/cms-tstemplate": "^13.4",
        "typo3/cms-viewpage": "^13.4"
    },
    "config": {
        "optimize-autoloader": true,
        "secure-http": true,
        "sort-packages": true,
        "bin-dir": "./bin/",
        "platform": {
            "php": "8.3"
        },
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true,
            "cweagans/composer-patches": true
        }
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": "public"
        },
        "helhum/typo3-console": {
            "install-binary": false,
            "install-extension-dummy": false
        },
        "scripts-dev": {
            "post-autoload-dump": [
                "@folder-structure"
            ]
        }
    },
    "scripts": {
        "folder-structure": [
            "@php ./typo3cms install:fixfolderstructure"
        ],
        "setup-active-extensions": [
            "@php ./typo3cms extension:setup"
        ],
        "check": [
            "@cs",
            "@phpstan"
        ],
        "tests": [
            "./bin/phpunit -c ./phpunit.xml"
        ],
        "cs": [
            "./bin/php-cs-fixer fix --dry-run"
        ],
        "csfix": [
            "./bin/php-cs-fixer fix"
        ],
        "phpstan": [
            "./bin/phpstan analyze  --memory-limit=-1"
        ],
        "psalm": [
            "./bin/psalm"
        ],
        "psalmfix-easy": [
            "./bin/psalm --alter --issues=MissingReturnType,InvalidReturnType,InvalidNullableReturnType,MissingParamType"
        ],
        "psalmfix": [
            "./bin/psalm --alter --issues=all"
        ],
        "rector": [
            "./bin/rector process --dry-run packages/"
        ],
        "rectorfix": [
            "./bin/rector process packages/"
        ]
    }
}
